@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model sports_hub.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password?";
    Layout = "_LoginLayout";
}

<head>
    <link rel="stylesheet" href="~/css/Account/password-reset.css" />
    <title>@ViewData["Title"]</title>
</head>
<form asp-controller="Account" asp-action="ForgotPassword" method="post" class="user_login_form">
    <div>
        <h3 class="form_title">@Localizer["Title"]</h3>
    </div>
    <div>
        <h4 class="forgot_description">@Localizer["Description"]</h4>
    </div>
    <div asp-validation-summary="All" class="input_error"></div>
    <div>
        <label asp-for="Email" class="cred_label">@Localizer["EmailAddress"]</label>
        <div>
            <input asp-for="Email" class="cred_input" placeholder="Email@gmail.com" />
        </div>
    </div>
    <div>
        <button type="submit" class="submit_button">@Localizer["RequestLink"]</button>
    </div>
    <a href="/account/login" class="back_to_signin">@Localizer["BackToLogIn"]</a>
</form>